<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../partial/meta.ejs")%>

    <title>Register</title>
  </head>
  <style>
    .main_container {
      background-color: rgba(135, 206, 250, 0.471);
      height: 500px;
      width:28%;
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      left: 38%;
      top: 5%;
      border-radius: 20px;
      box-shadow: 1px 0px 6px 8px;
    }
    .input_container {
      margin: 10px;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-left:30px ;
    }
    .input_text {
      margin: 15px;
      font-size: 20px;
      border-radius: 20px;
      text-align: center;
      border: none;
      border-top: none;
      border-left: none;
      border-right: none;
      height: 35px;
      width: 290px;
      
      display: flex;
    }
    .heading {
      font-weight: bolder;
      justify-content: center;
      display: flex;
      color: black;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .submit {
      margin-top: 10px;
      font-size: 20px;
      border-radius: 10%;
      margin-left: 29%;
      border: none;
      width: 40%;
      cursor: pointer;
      align-items: center;
      color: blue;
      height: 40px;
      font-family: sans-serif;
      font-weight: 600;
    }
  </style>
  <body>
    <%-include("../partial/navbar.ejs")%>
    <form action="/registerpage" class="main_container" method="post">
      <div class="input_container">
        <h1 class="heading">Registration Form</h1>
        <input
          type="text"
          placeholder="Name"
          class="input_text"
          name="name"
          required
        />
        <input
          type="text"
          placeholder="Email"
          class="input_text"
          name="email"
          required
        />
        <input
          type="text"
          placeholder="Phone number"
          class="input_text"
          name="phone"
          required
        />
        <input
          type="password"
          placeholder="Password"
          class="input_text"
          name="password"
          required
        />
        <input
          type="password"
          placeholder="Cnf-password"
          class="input_text"
          name="cnfpassword"
          required
        />
        <button type="submit" class="submit">submit</button>
      </div>
    </form>
  </body>
</html>
